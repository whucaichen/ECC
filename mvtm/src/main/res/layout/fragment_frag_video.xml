<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ecc_video_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag.FragVideo">

    <RelativeLayout
        android:id="@+id/ecc_remoteview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_call_anim"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_call_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_call_anim"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/ecc_calling"
            android:textColor="#c00"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ecc_video_small"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"></RelativeLayout>

    <FrameLayout
        android:id="@+id/ecc_shelter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <include layout="@layout/shelter"></include>
    </FrameLayout>

</RelativeLayout>
